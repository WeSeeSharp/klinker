{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "lib": ["es2015"],
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules", "dist"]
}
